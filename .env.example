########################
# Postgres
########################
POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8n
POSTGRES_DB=n8n

########################
# n8n (Editor/Auth/Basis-URL)
########################
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=supersecret
# Bitte langen, zufälligen Key setzen (32+ Zeichen)
N8N_ENCRYPTION_KEY=CHANGE_THIS_LONG_RANDOM_STRING

# Host/URL für lokale Nutzung (bei Traefik/Domain anpassen)
N8N_HOST=localhost
WEBHOOK_URL=http://localhost/
TZ=Europe/Berlin

########################
# Optional: Traefik / HTTPS (für docker-compose-traefik.yml)
########################
TRAEFIK_ENABLED=false
ACME_EMAIL=you@example.com
# Falls Domainbetrieb: setze hier die Domains
# N8N_HOST=n8n.example.com
PYAPI_HOST=pyapi.example.com
